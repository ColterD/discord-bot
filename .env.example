# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# Guild ID for development (guild commands update instantly)
DEV_GUILD_ID=your_dev_guild_id_here

# Docker Compose variables (can be same as above)
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here

# Environment mode: 'development' | 'production'
NODE_ENV=development

# Local LLM Configuration (for your 4090)
LLM_API_URL=http://host.docker.internal:11434
LLM_MODEL=llama2
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Bot Permission System (comma-separated Discord user IDs)
# Owners have full control over the bot
BOT_OWNER_IDS=your_discord_user_id_here
# Admins can manage AI settings (future use)
BOT_ADMIN_IDS=
# Moderators can manage conversations (future use)
BOT_MODERATOR_IDS=

# MCP Server Configuration (optional)
CONTEXT7_API_KEY=your_context7_api_key_here
